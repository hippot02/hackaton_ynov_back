{% extends 'base.html.twig' %}

{% block title %}Admin rendu M1{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">Admin rendu M1</h1>

        <div class="text-end mb-3">
            <a href="{{path('app_rendu_index')}}" class="btn btn-primary">Rafraichir</a>
            <a href="{{ path('app_api') }}" class="btn btn-primary">Visualiser API</a>
            <a href="{{ path('app_rendu_new') }}" class="btn btn-primary">Créer Nouveau Rendu</a>
        </div>

        <!-- Formulaire de filtre par groupe -->
        <form id="filterForm" class="mb-3">
            <div class="d-flex justify-content-end">
                <select id="groupeFilter" class="form-select w-auto me-2">
                    <option value="">Tous les groupes</option>
                    <option value="M1Web">M1Web</option>
                    <option value="M1Data">M1Data</option>
                    <option value="M1Log">M1Log</option>
                </select>
            </div>
        </form>

        <table class="table table-striped table-hover">
            <thead class="table-light">
                <tr>
                    <th scope="col">Titre</th>
                    <th scope="col">Date de Dépôt</th>
                    <th scope="col">Lien de Dépôt</th>
                    <th scope="col">Groupe</th>
                    <th scope="col">Actif</th>
                    <th scope="col" class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody id="renduTableBody">
            {% for rendu in rendus %}
                <tr data-groupe="{{ rendu.groupe }}">
                    <td>{{ rendu.titre }}</td>
                    <td>{{ rendu.dateDepot ? rendu.dateDepot|date('Y-m-d H:i:s') : '' }}</td>
                    <td>
                        <a href="{{ rendu.lienDepot }}" target="_blank">{{ rendu.lienDepot }}</a>
                    </td>
                    <td>{{ rendu.groupe }}</td>
                    <td class="{{ rendu.actif ? 'bg-success text-white' : 'bg-danger text-white' }}">
                        {{ rendu.actif ? 'Oui' : 'Non' }}
                    </td>                   
                    <td class="text-center">
                        <a href="{{ path('app_rendu_show', {'id': rendu.id}) }}" class="btn btn-info btn-sm">Voir</a>
                        <a href="{{ path('app_rendu_edit', {'id': rendu.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7" class="text-center">Aucun enregistrement trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <script>
        document.getElementById('groupeFilter').addEventListener('change', function() {
            const selectedGroupe = this.value;
            const rows = document.querySelectorAll('#renduTableBody tr');

            rows.forEach(row => {
                const groupe = row.getAttribute('data-groupe');
                if (selectedGroupe === '' || groupe === selectedGroupe) {
                    row.style.display = ''; // Afficher la ligne
                } else {
                    row.style.display = 'none'; // Masquer la ligne
                }
            });
        });
    </script>
{% endblock %}
