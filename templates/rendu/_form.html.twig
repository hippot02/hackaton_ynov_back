<div class="container mt-5">
    <div class="card">
        <div class="card-header">
            <h5>{{ button_label|default('Form Title') }}</h5>
        </div>
        <div class="card-body">
            {{ form_start(form) }}
            
            {% for field in form %}
                {% if field.vars.name != '_token' %}
                    <div class="form-group">
                        {{ form_label(field) }}
                        {% if field.vars.name == 'actif' %}
                            <div class="form-check form-switch">
                                {{ form_widget(field, {'attr': {'class': 'form-check-input'}}) }}
                                <label class="form-check-label">{{ field.vars.label }}</label>
                            </div>
                        {% else %}
                            {{ form_widget(field, {'attr': {'class': 'form-control'}}) }}
                        {% endif %}
                        {{ form_errors(field) }}
                    </div>
                {% endif %}
            {% endfor %}

            <button class="btn btn-primary">{{ button_label|default('Save') }}</button>
            {{ form_end(form) }}
        </div>

        <div class="card-footer d-flex justify-content-between">
            <a href="{{ path('app_rendu_index') }}" class="btn btn-secondary">Back to List</a>

            {% if button_label is defined and button_label == 'Update' %}
                <form method="post" action="{{ path('app_rendu_delete', {'id': rendu.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ rendu.id) }}">
                    <button class="btn btn-danger" type="submit">Delete</button>
                </form>
            {% endif %}
        </div>
    </div>
</div>
